%p#notice= notice
.person
  %h1
    = @person.first_name
    = @person.last_name
  = render 'phone_numbers/phone_numbers', phone_numbers: @person.phone_numbers
  = render 'email_addresses/email_addresses', email_addresses: @person.email_addresses
  %ul.actions
    %li= link_to 'Add phone number', new_phone_number_path(contact_id: @person.id, contact_type: 'Person')
    %li= link_to 'Add email address', new_email_address_path(contact_id: @person.id, contact_type: 'Person')
    %li= link_to 'Edit', edit_person_path(@person)
    %li= link_to 'Back', people_path
